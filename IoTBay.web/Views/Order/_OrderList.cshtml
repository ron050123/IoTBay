@model List<IoTBay.web.ViewModels.OrderListViewModel>

<h1>Order List</h1>

<form asp-action="Index" method="get">
    <p>
        <label for="searchDate">Search by Date:</label>
        <input type="date" id="searchDate" name="searchDate">

        <label for="searchOrderId">Search by Order ID:</label>
        <input type="number" id="searchOrderId" name="searchOrderId">

        <input type="submit" value="Search" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Date & Time</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>User ID</th>
            <th>Quantity</th>
            <th>Action</th>
            <th>Order ID</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            @if (order.OrderDetails != null)
            {
                foreach (var orderDetail in order.OrderDetails)
                {
                    <tr>
                        <td>@order.OrderDate</td>
                        <td>@orderDetail.ProductName</td>
                        <td>@orderDetail.Price</td>
                        <td>@order.UserId</td>
                        <td>@order.Quantity</td>
                        <td>
                            <a asp-controller="Order" asp-action="Edit" asp-route-id="@order.OrderId">Edit</a>
                        </td>
                        <td>@order.OrderId</td>
                    </tr>
                }
            }
        }

    </tbody>
</table>

