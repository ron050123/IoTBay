@model IoTBay.web.Models.Entities.Usr

@{
    ViewData["Title"] = "Edit Customer";
}

<div style="padding-top: 20px; padding-bottom:  20px;">
    <a asp-controller="Customer" asp-action="Index" class="btn btn-secondary">â—„ Back</a>
</div>

<div style="padding-bottom: 20px;">
    <h2>Edit Customer</h2>
</div>

<form asp-controller="Customer" asp-action="Edit">
    <input type="hidden" asp-for="UserId" />
    
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control"/>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Type"></label>
        <input asp-for="Type" class="form-control"/>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control"/>
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label>
            <input type="checkbox" asp-for="IsActive" /> Activated
        </label>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>
