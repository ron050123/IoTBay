@model IoTBay.web.Models.Entities.Payment

@{
ViewData["Title"] = "Edit Payment";
}

<h1>Edit Payment</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="PaymentId" />
    <input type="hidden" asp-for="UserId" />
    <input type="hidden" asp-for="OrderId" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="TransactionDate" class="control-label"></label>
        <input asp-for="TransactionDate" class="form-control" type="datetime-local" />
        <span asp-validation-for="TransactionDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Amount" class="control-label"></label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PaymentMethod" class="control-label"></label>
        <select asp-for="PaymentMethod" class="form-control" asp-items="ViewBag.PaymentMethods">
            <option value="">Please select a payment method</option>
        </select>
        <span asp-validation-for="PaymentMethod" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
        <input asp-for="Status" class="form-control" />
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}