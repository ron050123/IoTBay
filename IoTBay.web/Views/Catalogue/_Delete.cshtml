@model IoTBay.web.Models.Entities.Product

@{
    ViewData["Title"] = "Delete Product";
}

<h2>Delete @Model.Name</h2>

<p style="color: red; font-weight: bold">Are you sure you want to delete this product ?</p>

<form asp-action="ConfirmDeleteProduct" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="ProductId" hidden="hidden" value=@Model.ProductId/>


    <button type="submit" class="btn btn-danger mt-3">Delete</button>
</form>